# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Cognito
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Database
DATABASE_URL=postgresql://username:password@host:5432/serenity?schema=public

# API
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000
API_PORT=3001

# Security
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
ENCRYPTION_KEY=your-32-character-encryption-key

# AWS Services
KMS_KEY_ID=arn:aws:kms:us-east-1:123456789012:key/xxxxxxxx
S3_AUDIT_BUCKET=serenity-dev-audit-logs
S3_ASSETS_BUCKET=serenity-dev-assets

# Monitoring
CLOUDWATCH_LOG_GROUP=/aws/lambda/serenity-api
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Environment
NODE_ENV=development
NEXT_PUBLIC_ENV=development

# Session Security
SESSION_TIMEOUT_MINUTES=15
PHI_ACCESS_TIMEOUT_MINUTES=15
MFA_REQUIRED=false

# Email Service
SES_FROM_EMAIL=noreply@serenity-health.com
SES_REGION=us-east-1

# SMS Service (for MFA)
SNS_REGION=us-east-1

# Feature Flags
ENABLE_CRISIS_ALERTS=true
ENABLE_PEER_SUPPORT=true
ENABLE_PROVIDER_DASHBOARD=true
ENABLE_BILLING_AUTOMATION=true