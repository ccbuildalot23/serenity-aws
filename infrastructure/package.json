{
  "name": "@serenity/infrastructure",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "deploy": "cdk deploy --all",
    "deploy:dev": "cdk deploy --all --context env=dev",
    "deploy:pilot": "cdk deploy --all --context env=pilot --require-approval never",
    "deploy:prod": "cdk deploy --all --context env=prod --require-approval never",
    "diff": "cdk diff",
    "diff:pilot": "cdk diff --context env=pilot",
    "synth": "cdk synth",
    "synth:pilot": "cdk synth --context env=pilot",
    "destroy": "cdk destroy --all",
    "destroy:pilot": "cdk destroy --all --context env=pilot"
  },
  "devDependencies": {
    "@types/node": "20.10.5",
    "aws-cdk": "^2.115.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.115.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  }
}